{# On remplit la template base.html #}
{% extends 'base.html.twig' %}

{# On remplit le titre de la template #}
{% block title %}entreprise{% endblock %}

{# On remplit le corps de la template #}
{% block body %}

<div class="container">
<h1> Class√© par entreprise </h1>
<table class="table">
<thead>
  <tr>
    <th scope="col">Titre</th>
    <th scope="col">Nom de l'entreprise</th>
    <th scope="col">Formation</th>
    <th scope="col">Email</th>
    <th scope="col">Adresse de l'entreprise</th>
    <th scope="col">Details</th>
  </tr>
</thead>
<tbody>
  {% for entreprise in entreprises %}
    {% for stage in entreprise.stages %}
  <tr>
    <th scope="row">{{ stage.titre }}</th>
    <td>{{ entreprise.nom }}</td>
    <td>{% for formation in stage.formations %} {{ formation.titre }} | {% endfor %}</td>
    <td>{{ stage.email }}</td>
    <td>{{ stage.entreprise.adresse }}</td>
    <td><a href="{{ path('stage', {'id': 5}) }}">detail</a></td>
  </tr>
    {% endfor %}
  {% endfor %}
</tbody>
</table>
</div>

{% endblock %}
