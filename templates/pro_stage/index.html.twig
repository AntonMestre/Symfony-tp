{% extends 'base.html.twig' %}

{# On remplit le titre de la template #}
{% block title %}Accueil{% endblock %}

{# On remplit le corps de la template #}
{% block body %}

<div class="container">
<h1> Non class√© </h1>
<table class="table">
<thead>
  <tr>
    <th scope="col">Titre</th>
    <th scope="col">Nom de l'entreprise</th>
    <th scope="col">Formation</th>
    <th scope="col">Email</th>
    <th scope="col">Adresse de l'entreprise</th>
    <th scope="col">Details</th>
  </tr>
</thead>
<tbody>
  {% for stage in stages %}
  <tr>
    <th scope="row">{{ stage.titre }}</th>
    <td>{{ stage.entreprise.nom }}</td>
    <td>{% for formation in stage.formations %} {{ formation.titre }} | {% endfor %}</td>
    <td>{{ stage.email }}</td>
    <td>{{ stage.entreprise.adresse }}</td>
    <td><a href="{{ path('stage', {'id': stage.id}) }}">detail</a></td>
  </tr>
  {% endfor %}
</tbody>
</table>
</div>

{% endblock %}
